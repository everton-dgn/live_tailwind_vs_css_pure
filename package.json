    "@iconify-json/heroicons": "1.2.2",
    "unplugin-icons": "22.1.0",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@types/jsdom-global": "3.0.7",
    "@types/node": "22.13.8",
    "cssnano": "7.0.6",
    "dotenv": "16.4.7",
    "jsdom": "26.0.0",
    "jsdom-global": "3.0.2",
    "lefthook": "1.11.2",
    "postcss": "8.5.3",
    "postcss-import": "16.1.0",
    "postcss-preset-env": "10.1.5",
    "svelte": "5.25.6",
