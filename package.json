  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/live_tailwind_vs_css_pure",
  "scripts": {
    "dev": "astro dev",
    "dev:verbose": "astro dev --verbose",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "lint": "biome check ./src",
    "format": "biome check --write ./src",
    "biome:ci": "biome ci ./src --no-errors-on-unmatched --files-ignore-unknown=true",
    "check": "astro check && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "typecheck": "tsc --noEmit",
    "check:update": "pnpm update --interactive --latest",
    "update:pnpm": "corepack use pnpm@latest",
    "detect:duplicates": "pnpx jscpd ./src/**/*.ts",
    "postinstall": "pnpx lefthook install"
  },
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["@biomejs/biome", "esbuild", "lefthook", "sharp"]
  },
  "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
  "dependencies": {
    "@astrojs/svelte": "7.0.9",
    "@fontsource/inter": "5.2.5",
    "astro": "5.5.6"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/rss": "4.0.11",
    "@astrojs/sitemap": "3.3.0",
